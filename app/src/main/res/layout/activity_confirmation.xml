<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/confirmationTitle"
        style="@style/Title"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/total_amount" />

    <TextView
        android:id="@+id/totalAmount"
        style="@style/Title"
        android:textSize="36sp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:layout_below="@+id/confirmationTitle" />

    <View
        android:id="@+id/amountDivider"
        android:background="#eceff1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totalAmount"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/recipientsTitle"
        style="@style/Title"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amountDivider"
        android:layout_margin="16dp"
        android:text="@string/recipients" />

    <LinearLayout
        android:id="@+id/recipientsContainer"
        android:orientation="vertical"
        android:layout_below="@id/recipientsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
</ScrollView>